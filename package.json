{
  "name": "atlasql",
  "version": "1.0.0",
  "description": "TypeScript + Express + Apollo Server + Apollo Engine + GraphQL",
  "private": true,
  "directories": {
    "test": "__tests__"
  },
  "scripts": {
    "debug": "npm run build:dev && cross-env NODE_ENV=development NODE_ENV_ID=1 node --inspect-brk=9229 build/compiled.dev.js",
    "dev": "npm run build:dev && cross-env NODE_ENV=development NODE_ENV_ID=1 node build/compiled.dev.js",
    "stage": "npm run build:stage && cross-env NODE_ENV=stage NODE_ENV_ID=1 node build/compiled.stage.js",
    "prod": "cross-env NODE_ENV=production NODE_ENV_ID=1 node build/compiled.prod.js",
    "lint": "tslint -c tslint.json 'server/**/*.{ts}'",
    "test": "npm run lint && jest",
    "prepare-graphql": "npm run generate-graphql-schema && npm run gql2ts",
    "build:dev": "npm run clean && node node_modules/webpack/bin/webpack.js --config config/webpack.config.js",
    "build:stage": "npm run clean && node node_modules/webpack/bin/webpack.js --config config/webpack.stage.config.js",
    "build:prod": "npm run clean && node node_modules/webpack/bin/webpack.js --config config/webpack.production.config.js",
    "clean": "rimraf build/*",
    "generate-graphql-schema": "get-graphql-schema http://localhost:3000/graphql --json > ./schema.json && get-graphql-schema http://localhost:3000/graphql > ./schema.graphql",
    "gql2ts": "rimraf ./server/interfaces/graphql.d.ts && gql2ts schema.json -o ./server/interfaces/graphql.d.ts -e ../../../server/interfaces/interfacesExporterOverrides.js"
  },
  "main": "",
  "keywords": [
    "TypeScript",
    "Apollo Server",
    "GraphQL",
    "BFF",
    "MicroService",
    "WebService"
  ],
  "author": "Marcello Barile <marcello.barile@gmail.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/core-js": "^2.5.5",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.24",
    "@types/jest": "^27.0.2",
    "@types/mime": "^2.0.3",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.14.20",
    "@types/serve-static": "^1.13.10",
    "cross-env": "^7.0.3",
    "get-graphql-schema": "^2.1.2",
    "gql2ts": "^1.10.1",
    "graphql-type-json": "^0.3.2",
    "jest": "^27.3.1",
    "jest-cli": "^27.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.1",
    "apollo-server": "^3.4.0",
    "apollo-server-core": "^3.4.0",
    "apollo-server-express": "^3.4.0",
    "apollo-server-types": "^3.3.0",
    "app-root-path": "^3.0.0",
    "chalk": "^4.1.2",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "graphql": "^15.7.2",
    "graphql-subscriptions": "^1.2.1",
    "graphql-upload": "^12.0.0",
    "inquirer": "^8.2.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "reflect-metadata": "^0.1.13",
    "subscriptions-transport-ws": "^0.9.19",
    "type-graphql": "^1.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcellobarile/type-graphql-has"
  },
  "engines": {
    "node": ">=7.8.0",
    "npm": ">=4.2.0"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/build/",
      "<rootDir>/config/",
      "<rootDir>/graphql/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|js)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/(.*)\\.(test|spec))\\.ts$"
  }
}
