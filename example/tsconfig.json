{
  "compilerOptions": {
    "lib": ["esnext", "esnext.asynciterable", "es2018"],
    "target": "es2018",
    "module": "commonjs",
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["index.ts"]
}
